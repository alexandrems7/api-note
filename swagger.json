{
  "openapi": "3.0.0",
  "info": {
    "title": "API Notes",
    "description": "API para CRUD de notas/afazeres",
    "termsOfService": "",
    "contact": {
      "email": "alexandremartins770@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/notes",
      "description": "API de notas"
    },
    {
      "url": "https://api-blue-note.herokuapp.com/",
      "description": "API de notas"
    }
  ],
  "paths": {
    "/notes/all": {
      "get": {
        "summary": "Lista de todas as notas",
        "description": "Rota responsável por listar todas as notas",
        "tags": ["Notes"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Notes"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "summary": "Busca uma nota pelo ID",
        "description": "Rota responsável por buscar uma nota pelo ID",
        "tags": ["Notes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da nota para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Notes"
                }
              }
            }
          }
        }
      }
    },
    "/create": {
      "post": {
        "summary": "Cadastrar uma nota",
        "description": "Rota responsável por cadastrar uma nota",
        "tags": ["Notes"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Notes"
              },
              "examples": {
                "Notes": {
                  "value": {
                    "name": "Arrumar a casa",
                    "duration": 120,
                    "completed": "Sim",
                    "levelOfImportance": "alto"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Notes"
                }
              }
            }
          }
        }
      }
    },
    "/update/{id}": {
      "put": {
        "summary": "Editar uma nota pelo ID",
        "description": "Rota responsável por editar uma nota pelo ID",
        "tags": ["Notes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da nota para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Notes"
              },
              "examples": {
                "Notes": {
                  "value": {
                    "name": "Arrumar a casa",
                    "duration": 120,
                    "completed": "Sim",
                    "levelOfImportance": "alto"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Notes"
                }
              }
            }
          }
        }
      }
    },
    "/delete/{id}": {
      "delete": {
        "summary": "Apagar uma nota pelo ID",
        "description": "Rota responsável por apagar uma nota pelo ID",
        "tags": ["Notes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da nota para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Notes": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "duration": {
              "type": "number"
            },
            "completed": {
              "type": "string"
            },
            "levelOfImportance": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
